---
import { cn } from "../utils/cn";
import Icon from "./Icon.astro";

const { stars, author, photo, class: className } = Astro.props;
---

<div
  class={cn(
    "flex flex-col rounded-xl p-4 md:p-6 relative filter-drop-shadow-solid-offset",
    className,
  )}
>
  <div
    class={cn(
      "absolute inset-0 z-10 rounded-xl",
      stars > 2 ? "bg-blu-500" : "bg-grey-600",
    )}
  >
  </div>
  <div class="relative z-20 flex h-full flex-col justify-between gap-8">
    <div class="flex flex-col gap-4">
      <div class="flex gap-2">
        {
          Array.from({ length: stars }, () => (
            <Icon icon="star" class="h-6 w-6 text-white" />
          ))
        }
        {
          Array.from({ length: 5-stars }, () => (
            <Icon icon="star" class="h-6 w-6 text-black opacity-50" />
          ))
        }
      </div>
      <p class="text-lg text-white">
        <slot />
      </p>
    </div>
    <div class="flex w-full items-end gap-4">
      <img
        src={photo}
        alt="Photo of person leaving testimonial"
        class="h-12 w-auto rounded-lg"
      />
      <p class="text-2xl font-semibold text-white">{author}</p>
    </div>
  </div>
  <div
    class={cn(
      "absolute right-4 -bottom-2.5 h-6 w-6 -translate-x-1/2 rotate-45 rounded-sm bg-inherit z-0",
      stars > 2 ? "bg-blu-500" : "bg-grey-600",
    )}
  >
  </div>
</div>
