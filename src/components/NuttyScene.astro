---
import { cn } from "../utils/cn";
---

<div
  class="pointer-events-none relative flex overflow-hidden pt-16 select-none sm:overflow-visible"
>
  <div
    class={cn(["absolute z-0 ", "bottom-0 left-0", "w-[540px]", "sm:w-full"])}
  >
    <img src="images/foliage.svg" alt="" class="w-full" />
  </div>
  <div class="relative z-10 flex grow items-end justify-start">
    <img
      src="images/nutty-hero.svg"
      alt="Cartoon squirrel wearing a crown and holding acorns in both hands"
      class={cn([
        "relative",
        "bottom-[75px] -left-12 w-[290px]",
        "sm:bottom-[75px] sm:-left-12 sm:w-[330px]",
        "md:bottom-[100px] md:w-[380px]",
        "lg:bottom-[118px] lg:w-[470px]",
      ])}
    />
  </div>
  <div class="relative z-10 flex grow items-end justify-end">
    <img
      src="images/phone-hero.svg"
      alt="Mobile phone showing today's budget"
      class={cn([
        "animate-phone-float relative rotate-12",
        "right-8 bottom-6 w-[160px]",
        "sm:right-14 sm:bottom-10 sm:w-[170px]",
        "md:right-16 md:w-[200px]",
        "lg:right-24 lg:bottom-12 lg:w-[240px]",
      ])}
    />
  </div>
  <div
    class={cn([
      "absolute z-20",
      "w-[150px] bottom-0 left-0",
      "sm:w-[200px]",
      "md:w-[250px]",
      "lg:w-[290px]",
    ])}
  >
    <img src="images/leaves-foreground-left.svg" alt="" class="w-full" />
  </div>
  <div
    class={cn([
      "absolute z-20",
      "w-[80px] bottom-0 right-0",
      "sm:w-[60px]",
      "md:w-[100px]",
    ])}
  >
    <img src="images/leaves-foreground-right.svg" alt="" class="w-full" />
  </div>
</div>
